@model SpendingTracker.Models.SpendingRecord
@{
    ViewBag.Title = "Edit Spending";
}

<h2 class="page-title">Edit Spending</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { autocomplete = "off" }))
{
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Amount)
        @Html.EditorFor(model => model.Amount, new { htmlAttributes =
            new {
                @class = "form-control",
                @id = "amountInput",
                autocomplete = "off",
                @placeholder = "Enter the amount (RM) here",
                @required = "required" }})
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description)
        @Html.EditorFor(model => model.Description, new { htmlAttributes =
            new {
                @class = "form-control",
                @autocomplete = "off",
                @placeholder = "Enter the description here",
                @required = "required" }})
    </div>

    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn1" />
        <a href="@Url.Action("Index", "Spending")" class="btn btn1">Cancel</a>
    </div>
}
