<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Spending Tracker</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Link to CSS -->
    <link href="@Url.Content("~/Content/css/custom.css")" rel="stylesheet" />
</head>
<body class="light-mode">
    <nav class="navbar navbar-dark navbar-custom">
        <div class="container">
            @Html.ActionLink("Spending Tracker", "Index", "Spending", new { area = "" }, new { @class = "navbar-brand" })

            <!-- Toggle Switch for Background -->
            <label class="switch">
                <input type="checkbox" id="bgToggleSwitch">
                <span class="slider"></span>
            </label>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Developed by Naim Mahyuddin</p>
        </footer>
    </div>

    <!-- Scripts -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/aaa.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</body>
</html>
